{% extends '@admin/default_frame.twig' %

{% set menus = ['store', 'plugin', 'plugin_list'] %}

{% block title %}{{ 'simple_nem_pay.admin.config.title'|trans }}{% endblock %}
{% block sub_title %}{{ 'simple_nem_pay.admin.config.sub_title'|trans }}{% endblock %}

{% form_theme form '@admin/Form/bootstrap_4_horizontal_layout.html.twig' %}

{% block main %}

    <form role="form" method="post">
        {{ form_widget(form._token) }}
        
        <div class="c-contentsArea__cols">
            <div class="c-contentsArea__primaryCol">
                <div class="c-primaryCol">
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header"><span>{{ 'simple_nem_pay.admin.config.header'|trans }}</span></div>
                        <!-- /.box-header -->
                        <div class="card-body">
                            <div class="row">
                                <label class="col-3">{{ 'simple_nem_pay.admin.config.env'|trans }} <span class="text-danger small">必須</span></label>
                                <div class="col mb-2">
                                    {{ form_widget(form.env) }}
                                    {{ form_errors(form.env) }}
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <label class="col-3">{{ 'simple_nem_pay.admin.config.seller_id'|trans }} <span class="text-danger small">必須</span></label>
                                <div class="col mb-2">
                                    {{ form_widget(form.seller_nem_addr) }}
                                    {{ form_errors(form.seller_nem_addr) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
            
        <div class="c-conversionArea">
            <div class="c-conversionArea__container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-6">
                        <div class="c-conversionArea__leftBlockItem">
                            <a class="c-baseLink"
                               href="{{ url('admin_store_plugin') }}">
                                <i class="fa fa-backward" aria-hidden="true"></i>
                                <span>{{ 'simple_nem_pay.admin.config.back'|trans }}</span>
                            </a>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row align-items-center justify-content-end">
                            <div class="col-auto">
                                <button class="btn btn-ec-conversion px-5"
                                        type="submit">{{ 'simple_nem_pay.admin.config.save'|trans }}</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>


{% endblock %}
